<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.engyh.friendhub.presentation.ui.fragment.auth.SignInFragment"
        android:label="signInFragment">
        <action
            android:id="@+id/action_sign_in_to_name"
            app:destination="@id/nameFragment" />
        <action
            android:id="@+id/action_sign_in_to_email"
            app:destination="@id/emailSignInFragment" />

        <action
            android:id="@+id/action_sign_in_to_main"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/emailSignInFragment"
        android:name="com.engyh.friendhub.presentation.ui.fragment.auth.EmailSignInFragment"
        android:label="emailSignInFragment">
        <action
            android:id="@+id/action_email_sign_in_to_email_sign_up"
            app:destination="@id/emailSignUpFragment" />

        <action
            android:id="@+id/action_email_sign_in_to_main"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/emailSignInFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/emailSignUpFragment"
        android:name="com.engyh.friendhub.presentation.ui.fragment.onboarding.EmailSignUpFragment"
        android:label="emailSignUpFragment">
        <action
            android:id="@+id/action_email_sign_up_to_email_sign_in"
            app:destination="@id/emailSignInFragment" />
        <action
            android:id="@+id/action_email_sign_up_to_name"
            app:destination="@id/nameFragment" />
    </fragment>

    <fragment
        android:id="@+id/nameFragment"
        android:name="com.engyh.friendhub.presentation.ui.fragment.onboarding.NameFragment"
        android:label="nameFragment">
        <action
            android:id="@+id/action_name_to_location"
            app:destination="@id/locationFragment" />
        <action
            android:id="@+id/action_name_to_emailPassword"
            app:destination="@id/emailSignUpFragment" />
        <action
            android:id="@+id/action_name_to_sign_in"
            app:destination="@id/signInFragment" />
    </fragment>

    <fragment
        android:id="@+id/locationFragment"
        android:name="com.engyh.friendhub.presentation.ui.fragment.onboarding.LocationFragment"
        android:label="locationFragment">
        <action
            android:id="@+id/action_location_to_image"
            app:destination="@id/imageFragment" />
    </fragment>

    <fragment
        android:id="@+id/imageFragment"
        android:name="com.engyh.friendhub.presentation.ui.fragment.onboarding.ImageFragment"
        android:label="imageFragment">
        <action
            android:id="@+id/action_image_to_gender"
            app:destination="@id/genderFragment" />
    </fragment>

    <fragment
        android:id="@+id/genderFragment"
        android:name="com.engyh.friendhub.presentation.ui.fragment.onboarding.GenderFragment"
        android:label="genderFragment">
        <action
            android:id="@+id/action_gender_to_birthdate"
            app:destination="@id/birthdateFragment" />
    </fragment>

    <fragment
        android:id="@+id/birthdateFragment"
        android:name="com.engyh.friendhub.presentation.ui.fragment.onboarding.BirthdateFragment"
        android:label="birthdateFragment">
        <action
            android:id="@+id/action_birthdate_to_about"
            app:destination="@id/aboutFragment" />
    </fragment>

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.engyh.friendhub.presentation.ui.fragment.onboarding.AboutFragment"
        android:label="aboutFragment">
        <action
            android:id="@+id/action_about_to_main"
            app:destination="@id/mainFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.engyh.friendhub.presentation.ui.fragment.main.MainFragment"
        android:label="mainFragment" >
        <action
            android:id="@+id/action_main_to_sign_in"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_main_to_userInfo"
            app:destination="@id/userInfoFragment" />
        <action
            android:id="@+id/action_main_to_imagePreview"
            app:destination="@id/imagePreviewFragment" />
        <action
            android:id="@+id/action_main_to_edit"
            app:destination="@id/editFragment" />

        <action
            android:id="@+id/action_main_to_settings"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/userInfoFragment"
        android:name="com.engyh.friendhub.presentation.ui.fragment.other.UserInfoFragment"
        android:label="userInfoFragment">
        <action
            android:id="@+id/action_user_info_to_imagePreview"
            app:destination="@id/imagePreviewFragment" />
        <argument
            android:name="userId"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/postFragment"
        android:name="com.engyh.friendhub.presentation.ui.fragment.home.PostFragment"
        android:label="postFragment">
    </fragment>

    <fragment
        android:id="@+id/editFragment"
        android:name="com.engyh.friendhub.presentation.ui.fragment.edit.EditFragment"
        android:label="editFragment" />

    <fragment
        android:id="@+id/imagePreviewFragment"
        android:name="com.engyh.friendhub.presentation.ui.fragment.other.ImagePreviewFragment"
        android:label="imagePreviewFragment">
        <argument android:name="imageUrl" app:argType="string" />
        <argument android:name="senderName" app:argType="string" />
        <argument android:name="time" app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.engyh.friendhub.presentation.ui.fragment.settings.SettingsFragment"
        android:label="settingsFragment" />

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.engyh.friendhub.presentation.ui.fragment.chat.ChatFragment"
        android:label="chatFragment">
        <argument
            android:name="receiverId"
            app:argType="string" />
        <argument
            android:name="userName"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="imageUrl"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_chat_to_userInfoFragment"
            app:destination="@id/userInfoFragment" />
        <action
            android:id="@+id/action_chat_to_imagePreview"
            app:destination="@id/imagePreviewFragment" />
    </fragment>

</navigation>
